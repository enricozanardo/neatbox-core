{
	"name": "neatbox-core",
	"version": "2.0.0",
	"description": "Neatbox blockchain application",
	"author": "Neatbox <info@neatbox.it>",
	"contributors": [
		"lemii <info@lemii.dev>"
	],
	"license": "AGPL-3.0",
	"keywords": [
		"blockchain",
		"lisk",
		"nodejs",
		"javascript",
		"typescript"
	],
	"homepage": "",
	"repository": {},
	"engines": {
		"node": ">=18.12.0 <=18",
		"npm": ">=8.1.0"
	},
	"main": "dist/index.js",
	"scripts": {
		"lint": "eslint --ext .ts .",
		"lint:fix": "eslint --fix --ext .js,.ts .",
		"format": "prettier --write '**/*'",
		"prepack": "oclif manifest && oclif readme --multi --dir=docs/commands && npm shrinkwrap && npm prune --production && npm shrinkwrap",
		"prebuild": "if test -d dist; then rm -r dist; fi; rm -f tsconfig.tsbuildinfo; rm -f npm-shrinkwrap.json",
		"coldstart": "rm -rf ~/.lisk/neatbox-core/ && npm start",
		"dev": "npm run build:watch & npm run nodemon",
		"nodemon": "nodemon ./bin/run start",
		"start:mainnet": "./bin/run start --network mainnet",
		"start:testnet": "./bin/run start --network testnet",
		"start:mainnet:pm2": "pm2 start npm --name \"neatbox-core\" -- run start:mainnet",
		"start:testnet:pm2": "pm2 start npm --name \"neatbox-core\" -- run start:testnet",
		"build:watch": "tsc --watch",
		"build": "tsc",
		"test": "jest --passWithNoTests",
		"test:coverage": "jest --passWithNoTests --coverage=true --coverage-reporters=text",
		"test:ci": "jest --passWithNoTests --coverage=true --coverage-reporters=json",
		"version": "oclif readme --multi --dir=docs/commands && git add README.md docs",
		"prepublishOnly": "npm ci && npm run lint && npm run build"
	},
	"bin": {
		"neatbox-core-v6": "./bin/run"
	},
	"lisk": {
		"addressPrefix": "nbx"
	},
	"oclif": {
		"bin": "neatbox-core-v6",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help",
			"@oclif/plugin-autocomplete",
			"@oclif/plugin-version"
		],
		"additionalHelpFlags": [
			"-h"
		],
		"additionalVersionFlags": [
			"-v"
		],
		"topicSeparator": " ",
		"topics": {
			"block": {
				"description": "Commands relating to neatbox-core-v6 blocks."
			},
			"blockchain": {
				"description": "Commands relating to neatbox-core-v6 blockchain data."
			},
			"console": {
				"description": "neatbox-core-v6 interactive REPL session to run commands."
			},
			"config": {
				"description": "Commands relating to neatbox-core-v6 node configuration."
			},
			"keys": {
				"description": "Commands relating to neatbox-core-v6 key generation."
			},
			"generator": {
				"description": "Commands relating to neatbox-core-v6 block generator."
			},
			"hash-onion": {
				"description": "Create hash onions to be used by the forger."
			},
			"system": {
				"description": "Commands relating to neatbox-core-v6 node."
			},
			"passphrase": {
				"description": "Commands relating to neatbox-core-v6 passphrases."
			},
			"endpoint": {
				"description": "Commands relating to neatbox-core-v6 endpoint."
			},
			"sdk": {
				"description": "Commands relating to Lisk SDK development."
			},
			"transaction": {
				"description": "Commands relating to neatbox-core-v6 transactions."
			}
		}
	},
	"files": [
		"/bin",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json",
		"/dist",
		"/config",
		"/docs"
	],
	"husky": {
		"hooks": {
			"pre-commit": ""
		}
	},
	"dependencies": {
		"@liskhq/lisk-framework-chain-connector-plugin": "0.2.0",
		"@liskhq/lisk-framework-dashboard-plugin": "0.4.0",
		"@liskhq/lisk-framework-faucet-plugin": "0.4.0",
		"@liskhq/lisk-framework-forger-plugin": "0.5.0",
		"@liskhq/lisk-framework-monitor-plugin": "0.5.0",
		"@liskhq/lisk-framework-report-misbehavior-plugin": "0.5.0",
		"@oclif/core": "1.20.4",
		"@oclif/plugin-autocomplete": "1.3.6",
		"@oclif/plugin-help": "5.1.19",
		"@oclif/plugin-version": "1.1.3",
		"axios": "0.21.2",
		"fs-extra": "11.1.0",
		"inquirer": "8.2.5",
		"lisk-commander": "6.1.0",
		"lisk-sdk": "6.1.0",
		"luxon": "^3.4.4",
		"tar": "6.1.11",
		"tslib": "2.4.1"
	},
	"devDependencies": {
		"@oclif/test": "2.2.12",
		"@types/fs-extra": "9.0.13",
		"@types/jest": "29.2.3",
		"@types/jest-when": "3.5.2",
		"@types/luxon": "^3.4.2",
		"@types/node": "^18.15.3",
		"@types/tar": "6.1.3",
		"@typescript-eslint/eslint-plugin": "5.44.0",
		"@typescript-eslint/parser": "5.44.0",
		"app-root-path": "^3.1.0",
		"eslint": "8.28.0",
		"eslint-config-lisk-base": "2.0.1",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jest": "27.1.6",
		"globby": "10.0.2",
		"husky": "4.2.5",
		"jest": "29.3.1",
		"jest-extended": "3.2.0",
		"jest-when": "3.5.2",
		"lint-staged": "10.2.11",
		"nodemon": "^3.1.0",
		"oclif": "3.2.31",
		"prettier": "2.8.0",
		"ts-jest": "29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "5.0.2"
	}
}
